    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.4.3"
  },
  "license": "MIT",
  "private": true
}
