{
    "name": "macrojs",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "prepare": "husky install",
        "prepublish": "pnpm build",
        "clean": "rimraf ./packages/*/dist ./packages/*/*.tsbuildinfo",
        "build-types": "tsc --build",
        "build": "concurrently --raw -n esbuild,tsc \"node build.mjs\" \"npm:\"build-types",
        "watch": "concurrently --raw -n esbuild,tsc \"node build.mjs -w\" \"npm:\"watch-types",
        "watch-types": "tsc --build --watch --preserveWatchOutput",
        "test": "jest",
        "test-watch": "jest --watch",
        "lint": "eslint . -f codeframe"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "12",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "chalk": "^4.1.2",
        "concurrently": "^6.3.0",
        "esbuild": "^0.13.6",
        "esbuild-jest": "^0.5.0",
        "esbuild-node-externals": "^1.3.0",
        "esbuild-plugin-d.ts": "^1.0.6",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-no-only-tests": "^2.6.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": ">=6",
        "jest": "^27.2.5",
        "lerna": "^4.0.0",
        "lint-staged": ">=10",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.5",
        "tsconfig-paths-jest": "^0.0.1",
        "tsup": "^5.4.0",
        "typescript": "~4.4.3"
    },
    "license": "MIT",
    "private": true,
    "lint-staged": {
        "*.js": "eslint --cache --fix"
    }
}
